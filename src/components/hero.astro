---
import { Image } from 'astro:assets'
import SectionLayout from '@/layouts/section-layout.astro'
import Nav from '@/components/nav.astro'
import Links from '@/components/links.astro'
import avatar from '../assets/avatar.png'
import { info } from '@/data'
---

<SectionLayout>
  <div class='flex flex-col gap-y-12 items-center justify-center'>
    <header class='flex flex-col gap-y-8 items-center z-30'>
      <Image
        src={avatar}
        alt={`avatar`}
        width={`136`}
        height={`136`}
        loading='eager'
        alt={`Avatar of ${info.name}`}
      />

      <h1 class='text-3xl'>{info.name}</h1>
      <h2 class='text-2xl text-center'>{info.description}</h2>
    </header>
    <Nav />
    <Links />
  </div>
</SectionLayout>
