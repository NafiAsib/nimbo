---

<section>
  <ul class="flex flex-col gap-y-8 h-screen">
    {
      experiences.map((experience) => (
        <li class="lg:grid grid-cols-4 justify-normal">
          <p class="text-sm col-span-1 italic">
            {experience.startDate} - <br />
            {experience.endDate}
          </p>
          <div class="col-span-3">
            <div class="text-lg">
              <h4 class="">
                {experience.title} · {experience.company}{" "}
                {experience.link && (
                  <a
                    href={experience.link}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <Image
                      src={"/icons/link.svg"}
                      alt={"link"}
                      width={15}
                      height={15}
                      class="inline hover:scale-125 transition-all duration-150 ease-out ml-2"
                    />
                  </a>
                )}
              </h4>
            </div>
            <h5 class="text-sm italic opacity-60">{experience.location}</h5>
            <p>{experience.description}</p>
            <div class="flex flex-wrap gap-x-2 mt-2">
              {experience.skills.map((skill) => (
                <span class="text-sm bg-transparent px-3 py-2 rounded-full border border-gray-300">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</section>
